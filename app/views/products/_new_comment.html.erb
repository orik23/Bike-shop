<div class="col-sm-12 col-md-4">
	<% if signed_in? %>
		<h3>Add your review</h3>
		<br>
		<!-- remote: true is for AJAX -->
		<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		  <p>
		    <%= f.label :body, "Your comment:" %><br>
		    <%= f.text_area :body %>
		  </p>
		  <div>
		  	<%= f.label :rating, "Your rating:" %>
        <div class="rating"></div>
		  </div>
		  <br>
		  <p>
		    <%= f.submit class:"btn btn-default" "Submit" %>
		  </p>
		<% end %>
	<% end %>
</div>
