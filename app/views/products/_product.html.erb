<% cache product do %>
  <div class="row">
    <tr>
      <td><h4><%= link_to product.name, product %></h4></td>
      <td><p><%= product.description %></p></td>
      <td><%= image_tag(product.image_url, class: "img-product") %></td><br>
      <td><%= product.colour %></td><br>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td><br><br>
    </tr>
  </div>
<% end %>