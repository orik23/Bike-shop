<header>
	<h1>Products</h1>
</header>

<div class="container-fluid">
  <div class="row">
  	<% cache(cache_key_for_products) do %>
  		<% @products.each do |product| %>
        <%= render partial: 'shared/product', locals: {product: product} %>
  	<% end %>
  	<% end %>
  	<br>
  </div>
  <br>
  <%= link_to 'Create New Product', new_product_path, class:"btn btn-default", id: "btn-create-product" %>
</div>
